doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    include includes/links
    title Increment Counter
  body
    .container
      .container-box
        |
        |
        i(class="fab fa-twitter container-icon")
        .container-counter(data-number="3000")
        h3.container-text Twitter Followers
        |
        |
      |
      |
      .container-box
        |
        |
        i(class="fab fa-youtube container-icon")
        .container-counter(data-number="10000")
        h3.container-text Youtube Subscribers
        |
        |
      |
      |
      .container-box
        |
        |
        i(class="fab fa-facebook container-icon")
        .container-counter(data-number="500")
        h3.container-text Facebook Friends
        |
        |
    script(src="js/app.js") 
